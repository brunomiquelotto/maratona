<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Maratona de programação</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/static/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/main.css">
</head>
<body>
    <aside class="sidebar">
        <ul class="sidebar-menus">
            <li>
                <a href="/admin/">Voltar</a>
            </li>
            <li>
                <a href="/admin/maratonas/nova">Nova</a>
            </li>
        </ul>
    </aside>
    <section class="container-fluid main-content">
        <div class="row">
            <div class="col-md-12 mg-t-10">
                <div class="main-card shadow">
                    <a href="/admin/maratonas/nova">Adicionar</a>
                    <table class="main-table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Início</th>
                                <th>Tempo</th>
                                <th style="width: 120px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% maratonas.forEach(function(maratona) { %>
                            <tr>
                                <td><%=maratona.Name%></td>
                                <td><%=maratona.DtStart%></td>
                                <td><%=maratona.CompetitionTime%></td>
                                <td>
                                    <a href="/admin/maratonas/<%=maratona.CompetitionId%>/competidores" class="table-button primary-button"></a>
                                    <a href="/admin/maratonas/<%=maratona.CompetitionId%>" class="table-button info-button"></a>
                                    <a class="table-button danger-button" href="/admin/maratonas/<%=maratona.CompetitionId%>/remove"></a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</body>
</html>