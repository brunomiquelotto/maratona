<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Maratona de programação</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/static/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/css/main.css">
</head>
<body>
    <aside class="sidebar">
        <ul class="sidebar-menus">
            <li>
                <a href="/admin/maratonas/">Voltar</a>
            </li>
        </ul>
    </aside>
    <section class="container-fluid main-content">
        <div class="row">
            <div class="col-md-12 mg-t-10">
                <div class="main-card shadow">
                    <a href="/admin/maratonas/<%=id%>/questoes/nova">Adicionar</a>
                    <table class="main-table">
                        <thead>
                            <tr>
                                <th style="width: 100px;">Letra</th>
                                <th>Descrição</th>
                                <th style="width: 100px;">Cor</th>
                                <th style="width:100px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% questoes.forEach(function(questao) { %>
                            <tr>
                                <td><%=questao.Letter%></td>
                                <td><%=questao.Description%></td>
                                <td>
                                    <div class="balloon" style="background-color: <%=questao.Color%>"></div>
                                </td>
                                <td>
                                    <a href="/admin/maratonas/<%=id%>/questoes/<%=questao.QuestionId%>" class="table-button info-button"></a>
                                    <a href="/admin/maratonas/<%=id%>/questoes/<%=questao.QuestionId%>/remove" class="table-button danger-button"></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</body>
</html>